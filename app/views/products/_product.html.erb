    <%= link_to image_tag(product.image_url, class: "img-responsive product-images"), product %>
    <div class="product-info">
      <a href="#"><h3 class="product-name-title"><%= product.name %></h1></a>
      <p><%= product.description %></p>
      <strong><%= number_to_currency(product.price, unit: 'Â£', precision: 2) %></strong>
    </div><br >
    <div class="admin-links">
      <ul class="links-to-pages">
        <li><%= link_to 'Show', product_path(product) %></li>
