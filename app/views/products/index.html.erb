<div class="new-product-button">
  <button class="btn btn-primary new-product">
    
      <%= link_to 'New Product', new_product_path %>
    
  </button>
</div>

<p class="body-text" id="notice"><%= notice %></p>

<h1 class="main title">Products</h1>

<div class="container-fluid">
  <div class="row">
    <% cache(cache_key_for_products) do %><!-- outer fragment caching -->
      <%= render @products %>
    <% end %><!-- end of outer fragment caching -->
  </div>
</div>


<%= will_paginate @products %>



